                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="          Наименование"
                                       Margin="0,3,0,0"
                                       Background="Orange"
